{
  "extends": "tslint:recommended",
  "rules": {
    "curly": false,
    "eofline": false,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "align": [
      true,
      "parameters"
    ],
    "class-name": true,
    "indent": [
      true,
      "spaces"
    ],
    "max-line-length": [
      true,
      650
    ],
    "no-trailing-whitespace": true,
    "no-duplicate-variable": true,
    "no-var-keyword": true,
    "no-empty": true,
    "no-unused-expression": true,
    "no-use-before-declare": true,
    "no-var-requires": true,
    "no-console": [
      true,
      "log",
      "error"
    ],
    "one-line": [
      true,
      "check-else",
      "check-whitespace",
      "check-open-brace"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-type"
    ]
  }
}
